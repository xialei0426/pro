<%=stylesheet_link_tag "bootstrap"%>
<div class="container">
	<div class="row">
		<div class="span12">
			<div class="page-header">
				<h1>
					PageRank管理
				</h1>
			</div>
			<table class="table table-condensed table-striped table-hover">
				<thead>
					<tr>
						<th>
							编号
						</th>
						<th>
							功能
						</th>
						<th>
							操作
						</th>
						<th>
							状态
						</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							1
						</td>
						<td>
							<strong>启动PageRank程序</strong>
						</td>
						<td>
							<%= form_tag("seo/run", method: "get") do %>
							  <%= submit_tag("运行pr程序",class:"btn btn-primary") %>
							<% end %>
						</td>
						<td>
							<%=@run_state%>
						</td>
					</tr>
					<tr>
						<td>
							2
						</td>
						<td>
							<strong>批量删除数据</strong>
						</td>
						<td>
							<form class="form-inline" action="seo/delete">
								<input type="text" class="input-small" placeholder="起始id" name="start">
								<input type="text" class="input-small" placeholder="结束id" name="end">
								<button type="submit" class="btn btn-primary">删除</button>
							</form>
						</td>
						<td>
							<%=@delete_state%>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>